   <!-- DataSrouce 등록 -->
   <bean id="dataSource"
      class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
   <property name="driverClassName"
      value="oracle.jdbc.driver.OracleDriver"/>
   <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe
   " />
   <property name="username" value="billy" />
   <property name="password" value="billy" />
   </bean>
   
   <!-- Spring 과 MyBatis 연동 설정 -->
   <bean class="org.mybatis.spring.SqlSessionFactoryBean"
      id="sqlSession">
      <property name="configLocation"
         value="classpath:mybatis-config.xml">
      </property>
      <property name="dataSource" ref="dataSource"></property>
   </bean>
   <bean class="org.mybatis.spring.SqlSessionTemplate">
      <constructor-arg ref="sqlSession"></constructor-arg>
   </bean>
   

	<!-- 웹소켓 -->
	<websocket:handlers>
        <websocket:mapping path="/mmsSocket.do" handler="myHandler"/>
        <websocket:handshake-interceptors>
      		<bean class="org.springframework.web.socket.server.support.HttpSessionHandshakeInterceptor"/>
 		</websocket:handshake-interceptors>
        
    </websocket:handlers>
    <bean id="myHandler" class="org.kh.billy.websocket.ReplyEchoHandler"/>



   <!-- 트랜잭션 관리 설정 -->
   <bean id="transactionManager"
      class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
   <property name="dataSource" ref="dataSource"></property>
   </bean>
   <tx:advice id="txAdvice" transaction-manager="transactionManager">
   	<tx:attributes>
   		<tx:method name="select*" read-only="true"
   			rollback-for="Exception" />
   		<tx:method name="insert*" rollback-for="Exception" />
   		<tx:method name="update*" rollback-for="Exception" />
   		<tx:method name="delete*" rollback-for="Exception" />
   	</tx:attributes>
   </tx:advice>
   <tx:annotation-driven transaction-manager="transactionManager" />
   <aop:config proxy-target-class="true">
   	<aop:pointcut expression='execution(* org.kh.billy..*Impl.*(..))'
   		id="serviceMethod" />
   	<aop:advisor advice-ref="txAdvice" pointcut-ref="serviceMethod"
   		id="transactionAdvice" />
   </aop:config>
</beans>